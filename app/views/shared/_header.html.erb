<header class="bg-amber-800 text-white">
  <div class="container mx-auto p-4 flex justify-between items-center">
    <h1 class="text-xl">文章表現.com</h1>
    <div>
      <% if current_user %>
        <span class="cursor-pointer" onclick="showLogoutModal()">
          <%= current_user.nikname %>（ログアウト）
        </span>
      <% else %>
        <%= link_to 'ログインする', login_path, class: "text-white hover:text-amber-200" %>
      <% end %>
    </div>
  </div>
</header>

<div id="logoutModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3 text-center">
      <h3 class="text-lg leading-6 font-medium text-gray-900">ログアウトしますか？</h3>
      <div class="mt-2 px-7 py-3">
        <p class="text-sm text-gray-500">ログアウトすると、現在のセッションが終了します。</p>
      </div>
      <div class="items-center px-4 py-3">
        <%= button_to 'ログアウト', logout_path, method: :delete, class: "mt-4 inline-block bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded" %>
        <button onclick="hideLogoutModal()" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="button">キャンセル</button>
      </div>
    </div>
  </div>
</div>

<script>
  function showLogoutModal() {
    document.getElementById('logoutModal').style.display = 'block';
  }

  function hideLogoutModal() {
    document.getElementById('logoutModal').style.display = 'none';
  }
</script>