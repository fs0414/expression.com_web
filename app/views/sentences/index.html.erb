<div class="flex">
    <div class="flex-1 pr-5">
        <div class="space-y-4">
            <%= link_to '文章登録', new_sentence_path, class: "mt-4 inline-block bg-amber-600 hover:bg-amber-700 text-white font-bold py-2 px-4 rounded" %>
            <% @sentences.each do |sentence| %>
                <div class="border bg-orange-50 rounded p-4">
                <p class="text-gray-700"><%= sentence.content %></p>
                <%= render partial: "sentences/other_sentence", locals: { sentence: sentence } %>
                </div>
            <% end %>
        </div>
    </div>

    <div class="w-1/3 pl-6 pt-5 ml-6">
        <%= form_with url: sentences_path, method: :get, local: true do %>
            <%= text_field_tag :search, params[:search], placeholder: "単語を検索", class: "shadow appearance-none border rounded py-2 px-3 w-full mb-2" %>
            <%= submit_tag "検索", class: "bg-amber-600 hover:bg-amber-700 text-white font-bold py-2 px-4 w-full rounded" %>
        <% end %>
    </div>
</div>